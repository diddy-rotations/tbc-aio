{
  // --- General Editor ---
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",

  // --- Per-Language Indentation ---
  "[lua]": {
    "editor.tabSize": 3
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[astro]": {
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // --- File Associations ---
  "files.associations": {
    "*.lua": "lua"
  },

  // --- Search Exclusions ---
  "search.exclude": {
    "**/node_modules": true,
    "**/TBC-main": true,
    "**/Addon Libraries": true,
    "rotation/output": true,
    "**/dist": true
  },
  "files.exclude": {
    "**/node_modules": true
  },

  // --- Lua Language Server ---
  "Lua.workspace.library": [
    "${workspaceFolder}/docs/api"
  ],
  "Lua.runtime.version": "Lua 5.1",
  "Lua.diagnostics.globals": [
    "_G",
    "select",
    "unpack",
    "date",
    "wipe",

    "GetTime",
    "GetSpellInfo",
    "GetSpellTexture",
    "GetSpellCooldown",
    "GetTotemInfo",
    "GetWeaponEnchantInfo",
    "GetInventoryItemID",
    "GetInventoryItemTexture",
    "GetInventoryItemCooldown",
    "GetItemCount",
    "GetNumGroupMembers",
    "GetNumRaidMembers",
    "GetNumPartyMembers",
    "GetRaidRosterInfo",

    "IsSpellKnown",
    "IsSpellInRange",
    "IsUsableSpell",
    "IsInGroup",
    "IsInRaid",
    "InCombatLockdown",
    "CombatLogGetCurrentEventInfo",

    "UnitExists",
    "UnitHealth",
    "UnitHealthMax",
    "UnitPower",
    "UnitPowerMax",
    "UnitName",
    "UnitGUID",
    "UnitClass",
    "UnitLevel",
    "UnitIsPlayer",
    "UnitIsUnit",
    "UnitIsEnemy",
    "UnitIsFriend",
    "UnitIsDead",
    "UnitIsDeadOrGhost",
    "UnitIsVisible",
    "UnitIsConnected",
    "UnitInRange",
    "UnitCanAssist",
    "UnitAffectingCombat",
    "UnitFactionGroup",
    "UnitClassification",
    "UnitCreatureType",
    "UnitGroupRolesAssigned",
    "UnitDetailedThreatSituation",
    "UnitThreatSituation",
    "UnitRangedDamage",
    "UnitCastingInfo",
    "UnitChannelInfo",
    "UnitBuff",
    "UnitDebuff",

    "CreateFrame",
    "UIParent",
    "UISpecialFrames",
    "Minimap",
    "GameTooltip",
    "GameTooltip_Hide",
    "C_Timer",

    "SlashCmdList",
    "SLASH_FLUXLOG1",
    "SLASH_FLUXLOG2",
    "SLASH_FLUXAIO1",
    "SLASH_FLUXAIO2",

    "RAID_CLASS_COLORS",
    "INVSLOT_HEAD",

    "TMW",
    "Toaster",
    "LibStub",

    "Action"
  ],
  "Lua.diagnostics.disable": [
    "lowercase-global",
    "inject-field",
    "undefined-field",
    "redefined-local",
    "need-check-nil"
  ]
}
